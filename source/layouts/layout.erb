<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page"s frontmatter if it has one -->
    <title><%= current_page.data.title || "Highridge Homes" %></title>
    <%= stylesheet_link_tag "site.bundle" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial "partials/layouts/page_header" %>

    <div class="page-content">
      <%= yield %>
    </div>

    <%= partial "partials/layouts/page_footer" %>

    <%= partial "partials/google_analytics" %>
    <%= javascript_include_tag "site.bundle" %>
  </body>
</html>
